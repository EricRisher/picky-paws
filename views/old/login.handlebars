
<!-- This is the Login page -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login | Picky Paws</title>
    <link rel="stylesheet" type="text/css" href="/public/css/assets.css">
</head>
<body>
    <header>
        <nav>
            <a href="/" id="logo">PICKY PAWS</a>
            <a href="#">Sign In</a>
            <a href="#">Sign Up</a>
            <a href="#">Home</a>
        </nav>
    </header>

    <main class="login-container">
        <h1>Login to Picky Paws</h1>
        <form action="/login" method="POST" class="login-form">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" placeholder="Enter your email" required>
            
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" placeholder="Enter your password" required>
            
            <button type="submit">Login</button>
        </form>
        <p class="signup-link">Don't have an account? <a href="/signup">Sign up here</a></p>
    </main>

    <footer>
        <nav class="footer-nav">
            <a href="#">Home</a>
            <a href="#">About Us</a>
            <a href="#">Contact</a>
        </nav>
        <p class="footer-info">&copy; 2023 Picky Paws. All rights reserved.</p>
    </footer>

    <script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/9.6.1/firebase-auth.js"></script>
    <script type="module" src="/public/js/auth.js"></script>
    <script type="module" src="/public/js/main.js"></script>
</body>
</html>